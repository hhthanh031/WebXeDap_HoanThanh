@model Model.EF.Contact

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
}

@section jsFooter{
    <script src="/assets/client/js/controller/contactController.js"></script>
}

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <div class="thong-tin-lien-he">
                    <h2>Thông tin liên hệ</h2>
                    @Html.Raw(Model.Content)
                </div>

                <br />

                <div class="lien-he">
                    <h2>Gửi thông tin</h2>
                    <form id="frmLienHe">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" name="txtName" id="txtName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Điện thoại</label>
                            <input type="text" name="txtMobile" id="txtMobile" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" name="txtAddress" id="txtAddress" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="txtEmail" id="txtEmail" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Yêu cầu</label>
                            <textarea name="txtContent" id="txtContent" class="form-control"></textarea>
                        </div>
                        <button id="btnSend" class="btn btn-success">Gửi đi</button>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ban-do">
                    <h2>Bản đồ</h2>
                    <div class="map-google">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.2122203013337!2d106.65076461477166!3d10.795051792308866!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175293586468c11%3A0x877e25bdd1f1a205!2zNzcgWHXDom4gSOG7k25nLCBQaMaw4budbmcgNCwgVMOibiBCw6xuaCwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1616957611016!5m2!1svi!2s" width="550" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

